#!/usr/bin/env bash

/usr/bin/ssh-keygen -A

cat << EOF >> /etc/environment
export KUBERNETES_SERVICE_HOST="$KUBERNETES_SERVICE_HOST"
export KUBERNETES_SERVICE_PORT="$KUBERNETES_SERVICE_PORT"
export DEIS3_SERVICE_HOST="$DEIS3_SERVICE_HOST"
export DEIS3_SERVICE_PORT_REGISTRY="$DEIS3_SERVICE_PORT_REGISTRY"
EOF

gitreceive init

exec $@
