#!/usr/bin/env bash

/usr/bin/ssh-keygen -A

cat << EOF >> /etc/environment
export KUBERNETES_SERVICE_HOST="$KUBERNETES_SERVICE_HOST"
export KUBERNETES_SERVICE_PORT="$KUBERNETES_SERVICE_PORT"
export CODEBUILDER_SERVICE_HOST="$CODEBUILDER_SERVICE_HOST"
export CODEBUILDER_SERVICE_PORT_REGISTRY="$CODEBUILDER_SERVICE_PORT_REGISTRY"
EOF

gitreceive init

exec $@
